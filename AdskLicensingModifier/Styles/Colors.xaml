<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:Windows.UI">

    <ui:Color x:Key="Information">#b7daef</ui:Color>
    <ui:Color x:Key="Success">#C8E6C9</ui:Color>
    <ui:Color x:Key="Error">#E57373</ui:Color>

    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{ThemeResource SystemBaseHighColor}" />
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="{ThemeResource SystemBaseMediumHighColor}" />

</ResourceDictionary>